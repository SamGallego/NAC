<script src="/js/map.js"></script>
<div id="map"></div>
<script src="https://maps.googleapis.com/maps/api/js?key={{process.env.API_KEY}}&callback=initMap"></script>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>New Event</h1>
            <hr>
            <div class="form-group">
                <form>
                    <input type="text" placeholder="Movie" id="search" class="search">
                </form>
            </div>
            <select name="title" id="select_movie" class="select">
            </select>
            <form action="/event/create" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="capacity">Capacity</label>
                    <input type="number" class="form-control" name="capacity" id="capacity">
                </div>
                <div class="form-group">
                    <label for="startDate">Date</label>
                    <input type="datetime-local" class="form-control" name="startDate" id="startDate">
                </div>
                <label for="type">Select event format</label>
                <select name="type" class="form-control" id="type">
                    <option value="House">House</option>
                    <option value="Cinema">Cinema</option>
                </select>
                <div class="form-group">
                    <input type="hidden" class="form-control pos" name="lat" id="lat">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control pos" name="lng" id="lng">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control pos" name="title" id="title">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control pos" name="imageUrl" id="imageUrl">
                </div>
                <button type="submit" class="btn btn-dark btn-block btn-lg">Create</button>
            </form>
            {{#if errorMessage}}
            <div class="errorMessage">
                {{errorMessage}}</div>
            {{/if}}
        </div>
    </div>
</div>
<script src="/js/api-handler.js"></script>
<script src="/js/index.js"></script>